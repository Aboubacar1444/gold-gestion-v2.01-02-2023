{% block body %}
    <h1 class="text-uppercase text-center">Gestion vente de carburant</h1>
    <div class="card ">
        <div class="card-body ">
            <div class="table-responsive">
                <div id="example2_wrapper" class=" dataTables_wrapper dt-bootstrap5">
                    <table class="table" id="exemple2">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Litre</th>
                            <th>Type de carburant</th>
                            <th>Prix</th>
                            <th>Agent</th>
                            <th>Type de v√©hicule</th>
{#                            <th>Client</th>#}
                            <th>Date d'achat</th>
                            <th>Date d'enregistrement</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for sell_carburant in sell_carburants %}
                            <tr>
                                <td>{{ sell_carburant.id }}</td>
                                <td>{{ sell_carburant.litre }}</td>
                                <td>{{ sell_carburant.typeCarburant }}</td>
                                <td>{{ sell_carburant.prix }}</td>
                                <td>{{ sell_carburant.agent }}</td>
                                <td>{{ sell_carburant.clientVehicule }}</td>
