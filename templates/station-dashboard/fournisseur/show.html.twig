{% extends 'base-station.html.twig' %}


{% block body %}

    <h1 class="text-uppercase text-center">{{ fournisseur.fullName }}</h1>
    <hr>
    <div class="card">
        <div class="card-body">
                <div class="table-responsive">
                    <table class="table" >
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ fournisseur.id }}</td>
                            </tr>
                            <tr>
                                <th>FullName</th>
                                <td>{{ fournisseur.fullName }}</td>
                            </tr>
                            <tr>
                                <th>Entreprise</th>
                                <td>{{ fournisseur.entreprise }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ fournisseur.email }}</td>
                            </tr>
                            <tr>
                                <th>TelNumber</th>
                                <td>{{ fournisseur.telNumber }}</td>
                            </tr>
                            <tr>
                                <th>Address</th>
                                <td>{{ fournisseur.address }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <h1 class="text-uppercase text-center">Detail Achat chez {{ fournisseur.fullName }}</h1>
    <div class="card">
        <div class="card-body">
            <div id="example2_wrapper" class=" dataTables_wrapper dt-bootstrap5">
                <div class="table-responsive">
                    <table class="table" id="exemple2">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Litre</th>
                            <th>Type de carburant</th>
{#                            <th>Prix Unitaire</th>#}
                            <th>Prix</th>
                            <th>Date d'achat</th>
                            <th>Date d'enregistrement</th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for fournisseur in fournisseur.buyCarburants %}
                            <tr>
                                <td>{{ fournisseur.id }}</td>
                                <td>{{ fournisseur.litre }}</td>
                                <td>{{ fournisseur.typeCarburant }}</td>
{#                                <td>{{ fournisseur.prixUnitaire }}</td>#}
                                <td>{{ fournisseur.prix }}</td>
                                <td>{{ fournisseur.BuyAt|date('d-m-Y H:s') }}</td>
                                <td>{{ fournisseur.createdAt|date('d-m-Y H:s') }}</td>

                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <a href="{{ path('app_fournisseur_index') }}">Retour à la liste</a>

    <a href="{{ path('app_fournisseur_edit', {'id': fournisseur.id}) }}">Mise à jour</a>

    {{ include('station-dashboard/fournisseur/_delete_form.html.twig') }}
{% endblock %}
